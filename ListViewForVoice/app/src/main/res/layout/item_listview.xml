<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"
            android:src="@drawable/sound1" />


        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/share" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@+id/iv_share"
            android:layout_toEndOf="@+id/iv_sound"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_text"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@drawable/bg_bt_item_listview"
                android:ellipsize="end"
                android:padding="2dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2016-04-08"
                    android:textColor="#7f7f7f"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:text="12:03:12"
                    android:textColor="#7f7f7f"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
